extends layout

block content
  p hi, #{username} [
    if role == 'teacher' 
      a(href= '/markings') back to view all markings
    if role == 'student'
      a(href= back_link) back to view attempts
    |] [
    a(href='/logout') logout
    |]
  p Score: #{marks} / #{total_marks}
  p Page #{page} of #{total_pages} 
    if previous_action
      a(href= previous_action) previous
    if next_action && previous_action
      |&nbsp;
    if next_action
      a(href= next_action) next
  div(style="border: 1px solid black; position: absolute; z-index: 1")
    img#view-question(src= img_src_qn, width="100%", height="100%")
  div(style="position: absolute; z-index: 2")
    img#view-answer(src= img_src_ans, width="100%", height="100%")
  div(style="position: absolute; z-index: 3")
    img#view-marking(src= img_src_mark, width="100%", height="100%")
